
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if signedIn() && isOwner(uid);
    }
    
    // Allow a user to read/write their own daily logs subcollection
    match /users/{userId}/dailyLogs/{logId} {
      allow read, write: if signedIn() && isOwner(userId);
    }

    match /scans/{scanId} {
      allow create: if signedIn();
      allow read, update, delete: if signedIn()
        && resource.data.userId == request.auth.uid;
    }

    match /chats/{chatId} {
      allow create: if signedIn();
      allow read, update, delete: if signedIn()
        && resource.data.userId == request.auth.uid;
    }

    // Allow public read access for summary page
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false; 
    }
    match /food_items/{foodItemId} {
      allow read: if true;
      allow write: if false;
    }
    match /question_answers/{qaId} {
      allow read: if true;
      allow write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
